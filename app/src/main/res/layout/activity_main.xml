<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <!-- TODO (Step 4 : Adding the drawing view class in main activity layout to draw and make it visible in the UI.)-->
        <eu.tutorials.kidsdrawingapp.DrawingView
            android:id="@+id/drawing_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80FFFFFF"
            app:layout_constraintBottom_toTopOf="@id/color_pallet_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_brush_size"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#80595151"
            android:src="@drawable/ic_brush"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/drawing_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/drawing_view"
            app:layout_constraintTop_toBottomOf="@id/color_pallet_container" />

        <LinearLayout
            android:id="@+id/color_pallet_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drawing_view">

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/skin"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/skin" />

                <ImageButton
                    android:id="@+id/ib_brush_black"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/black"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/black" />

                <ImageButton
                    android:id="@+id/ib_brush_red"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/red"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/red" />

                <ImageButton
                    android:id="@+id/ib_brush_green"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/green"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/green" />

                <ImageButton
                    android:id="@+id/ib_brush_blue"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/blue"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/blue" />

                <ImageButton
                    android:id="@+id/ib_brush_yellow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/yellow"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/yellow" />

                <ImageButton
                    android:id="@+id/ib_brush_cyan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/lollipop"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/lollipop" />

                <ImageButton
                    android:id="@+id/ib_brush_purple"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/random"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/random" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>