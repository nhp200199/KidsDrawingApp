<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/color_pallet_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_drawing_view_container">

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/skin"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/skin" />

                <ImageButton
                    android:id="@+id/ib_brush_black"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/black"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/black" />

                <ImageButton
                    android:id="@+id/ib_brush_red"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/red"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/red" />

                <ImageButton
                    android:id="@+id/ib_brush_green"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/green"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/green" />

                <ImageButton
                    android:id="@+id/ib_brush_blue"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/blue"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/blue" />

                <ImageButton
                    android:id="@+id/ib_brush_yellow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/yellow"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/yellow" />

                <ImageButton
                    android:id="@+id/ib_brush_cyan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/lollipop"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/lollipop" />

                <ImageButton
                    android:id="@+id/ib_brush_purple"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:background="@color/random"
                    android:contentDescription="image"
                    android:onClick="paintClicked"
                    android:src="@drawable/pallet_normal"
                    android:tag="@color/random" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_drawing_view_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/color_pallet_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_drawing_view_img_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_brush"
                    android:scaleType="centerCrop"/>

                <eu.tutorials.kidsdrawingapp.DrawingView
                    android:id="@+id/drawing_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80FFFFFF"
                    app:layout_constraintBottom_toTopOf="@id/color_pallet_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/color_pallet_container">

                <ImageButton
                    android:id="@+id/ib_brush_size"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="#80595151"
                    android:src="@drawable/ic_brush" />

                <ImageButton
                    android:id="@+id/ib_bg_image_picker"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="#80595151"
                    android:src="@drawable/ic_gallery" />

                <ImageButton
                    android:id="@+id/ib_undo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="#80595151"
                    android:src="@drawable/ic_undo" />

                <ImageButton
                    android:id="@+id/ib_save"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="#80595151"
                    android:src="@drawable/ic_save" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>